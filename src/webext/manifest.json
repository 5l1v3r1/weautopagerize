{
  "manifest_version": 2,
  "name": "weAutoPagerize",
  "description": "__MSG_extensionDescription__",
  "version": "0.0.1",
  "developer": {
    "name": "wantora",
    "url": "https://github.com/wantora/weautopagerize"
  },
  "applications": {
    "gecko": {
      "id": "weautopagerize@wantora.github.io",
      "strict_min_version": "57.0"
    }
  },
  "default_locale": "en",
  "permissions": [
    "*://*/*",
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "button.svg#default",
    "default_title": "__MSG_browserActionLabel__"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "options.html"
  }
}